{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "**/dist/*",
    "**/node_modules/*"
  ],
  "rules": {
    "scss/dollar-variable-pattern": "^[a-z][a-zA-Z0-9]*$",
    "value-no-vendor-prefix": null,
    "property-no-vendor-prefix": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "tailwind",
          "apply",
          "layer",
          "variants"
        ]
      }
    ]
  }
}