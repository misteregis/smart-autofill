{
  "name": "smart-autofill",
  "type": "module",
  "version": "0.1.1",
  "description": "Extensão inteligente para Firefox que captura, salva e preenche automaticamente formulários web. Suporta múltiplos perfis, preenchimento automático, vinculação de sites e backup de dados.",
  "main": "dist/background.js",
  "scripts": {
    "build": "tsc && node build-bundle.js --verbose && pnpm build:css",
    "build:css": "pnpm build:style && pnpm build:tailwind",
    "build:style": "npx sass src/styles.scss:dist/styles.css --no-source-map --style=compressed",
    "build:tailwind": "npx tailwindcss -i src/tailwind.css -o dist/tailwind.css --minify",
    "watch": "tsc-watch --onSuccess \"node build-bundle.js\"",
    "lint": "biome check",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "web:build": "pnpm build && web-ext build --source-dir=dist --overwrite-dest --artifacts-dir=web-ext-artifacts",
    "web:run": "web-ext run --watch-files --source-dir=dist --keep-profile-changes --reload --firefox-profile ./web-ext-profile",
    "web:lint": "web-ext lint --source-dir=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/misteregis/smart-autofill.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "autofill",
    "form-filler",
    "automation",
    "webextension",
    "browser-extension",
    "typescript"
  ],
  "author": "@misteregis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/misteregis/smart-autofill/issues"
  },
  "homepage": "https://github.com/misteregis/smart-autofill#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/cli": "^4.1.18",
    "@types/firefox-webext-browser": "^143.0.0",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.20.2",
    "postcss": "^8.5.6",
    "sass": "^1.97.2",
    "stylelint": "^17.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "tailwindcss": "^4.1.18",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3",
    "web-ext": "^9.2.0"
  }
}
