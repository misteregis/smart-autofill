{
  "manifest_version": 2,
  "name": "Smart Autofill",
  "version": "1.0.0",
  "description": "Extensão de autopreenchimento inteligente de formulários",
  "content_security_policy": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "notifications",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-autofill@misteregis.github",
      "data_collection_permissions": {
        "required": [
          "websiteActivity"
        ]
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}